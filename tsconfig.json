{
  "compilerOptions": {
    "outDir": "./dist",          
    "rootDir": "./src",          
    "lib": ["esnext"], 
    "skipLibCheck": true, 
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@rneui/themed": ["node_modules/@rneui/themed"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
